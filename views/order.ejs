<!doctype html>
<html>
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    </head>
   <body>

    <div class="container-fluid" style="margin-top:7%">
        <form action = "http://127.0.0.1:3000/order" method = "GET">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="day" id="flexRadioDefault1" value="today"checked>
            <label class="form-check-label" for="flexRadioDefault1">
              TODAY
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="day" id="flexRadioDefault2" value="month">
            <label class="form-check-label" for="flexRadioDefault2">
              THIS MONTH
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="day" id="flexRadioDefault2" value="all">
            <label class="form-check-label" for="flexRadioDefault2">
              ALL TIME
            </label>
          </div>
          <br>          
        <div class="container-fluid ">
            CUSTOMER NAME: <input type = "text" name = "name" style = "margin-top:5%;"> 
        </div>
        <input class="btn btn-primary" style = "margin-top:5%" type = "submit" value = "Submit">
        </form>
   </div>
    <br> 
    <% if (locals.data) { %>
        <table class="table">
        <% data.forEach(data =>{ %>
                <tr>
                    <th scope="row"></th>
                    <td><%=data.BILLID%></td>
                    <td><%=data.BDATE%></td>
                    <td><%=data.TOTALAMOUNT%></td>
                  </tr>
        <% }) %>
        </table>      
    <% } %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
   </body>
</html>
